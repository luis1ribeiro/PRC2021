extends layout

block content
  .w3-container
        h3 GraphDB: Graph DataBase
        h9 Esta é a página relativa ao repositório #{info.id}. Aqui tem a informação relativa a este.
  div(style='margin:25px; padding:5px; border: 1px solid black; font-size: 16px')
    dl
        dt
            b Nome Repositório:
        dd= info.id
        dt
            b URI:
        dd= uri + info.id

  .w3-container
    .w3-card-4
      header.w3-container.w3-orange.w3-margin-top
        h4 Classes OWL
      table.w3-table-all
        tr
          th Nome Classe
          th Prefixo
        each c in classes
            if (c != "NameIndividual" && c != 'NamedIndividual' && c)
                tr
                    td
                      a(href="/"+info.id+"/"+c)= c
                    td= prefixo + c
  footer.w3-container.w3-orange.w3-margin-top(style="font-size:10px")
      pre
        i(class="fa fa-home")     
        a(href="/") Back to Home Page